<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="cn.zhian.avater.iotproject">

    <uses-permission android:name="android.permission.INTERNET" /> <!-- 网络状态 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- 数据存储 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> <!-- 相机 -->
    <uses-permission android:name="android.permission.CAMERA" /> <!-- 蓝牙外设 -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" /> <!-- 6.0蓝牙部分手机需要定位权限 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name=".Applications"
        android:allowBackup="true"
        android:icon="@mipmap/ic_1"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning"
        tools:targetApi="p">
        <activity android:name=".ui.activity.EnvirmentUI"></activity>
        <activity android:name=".ui.activity.VideoWatchUI" />
        <activity
            android:name=".ui.activity.AddHostUI"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.CustomerRoomUI"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden" />
        <activity
            android:name=".ui.activity.AddNewRoomUI"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.AddDeviceUI"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden" />
        <activity
            android:name=".ui.activity.DeviceManagerUI"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.MessageContentUI"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.MessageUI"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.ConnectTypeUI"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.PasswordUI"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.ManagerUI"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.SenseUI"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.PersonUI"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.LoginUI"
            android:screenOrientation="portrait" />
        <activity
            android:name=".zxing.android.CaptureActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.FlashUI"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.MainUI"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />

        <activity
            android:name=".wxapi.WXEntryActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:taskAffinity="net.sourceforge.simcpux"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />


        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="cn.zhian.avater.iotproject.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/path" />
        </provider>
    </application>

</manifest>
