<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dimen_size_20">

    <RelativeLayout
        android:id="@+id/rl_bg"
        android:layout_width="@dimen/dimen_size_150"
        android:layout_height="@dimen/dimen_size_150"
        android:layout_centerInParent="true"
        android:background="@drawable/light_item_0">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <Switch
                android:id="@+id/switch_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/switch_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_size_20"
                android:text="灯光1"
                android:textSize="@dimen/dimen_size_15" />
        </LinearLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/switch_time"
        android:layout_width="@dimen/dimen_size_150"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_size_10"
        android:background="@drawable/lightui_shape_bg"
        android:text="定时" />

</LinearLayout>
