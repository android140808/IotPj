<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_50"
        android:background="@color/color_while">

        <!--左边返回键-->
        <ImageView
            android:id="@+id/comm_tittle_iv_left"
            android:layout_width="@dimen/dimen_size_30"
            android:layout_height="@dimen/dimen_size_30"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dimen_size_20"
            android:background="@mipmap/back"
            android:visibility="visible" />

        <!--中间标题-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/add_host"
            android:textColor="@color/color_black"
            android:textSize="@dimen/dimen_size_20" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_qr_code"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_60"
        android:layout_margin="@dimen/dimen_size_20"
        android:background="@drawable/login_bg"
        android:gravity="start|center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dimen_size_30"
            android:layout_height="@dimen/dimen_size_30"
            android:layout_marginLeft="@dimen/dimen_size_20"
            android:background="@mipmap/qr_code" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_size_20"
            android:gravity="center|start"
            android:text="@string/add_host_by_qr_code"
            android:textColor="@color/color_black" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_by_hand"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_60"
        android:layout_marginLeft="@dimen/dimen_size_20"
        android:layout_marginRight="@dimen/dimen_size_20"
        android:layout_marginBottom="@dimen/dimen_size_20"
        android:background="@drawable/login_bg"
        android:gravity="start|center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dimen_size_30"
            android:layout_height="@dimen/dimen_size_30"
            android:layout_marginLeft="@dimen/dimen_size_20"
            android:background="@mipmap/hand" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_size_20"
            android:gravity="center|start"
            android:text="@string/add_host_by_hand"
            android:textColor="@color/color_black" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_by_net"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_60"
        android:layout_marginLeft="@dimen/dimen_size_20"
        android:layout_marginRight="@dimen/dimen_size_20"
        android:background="@drawable/login_bg"
        android:gravity="start|center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dimen_size_30"
            android:layout_height="@dimen/dimen_size_30"
            android:layout_marginLeft="@dimen/dimen_size_20"
            android:background="@mipmap/connect_inner" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_size_20"
            android:gravity="center|start"
            android:text="@string/add_host_by_inner_net"
            android:textColor="@color/color_black" />


    </LinearLayout>

</LinearLayout>
