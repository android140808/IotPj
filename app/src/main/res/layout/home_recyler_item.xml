<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_ll"
        android:layout_width="@dimen/dimen_size_110"
        android:layout_height="@dimen/dimen_size_110"
        android:background="@drawable/home_recyler_view_item_bg"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_iv"
            android:layout_width="@dimen/dimen_size_40"
            android:layout_height="@dimen/dimen_size_40"
            android:background="@mipmap/item_safe" />

        <TextView
            android:id="@+id/item_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_size_10"
            android:text="@string/setting_recover"
            android:textColor="@color/main_tv_un_select"
            android:textSize="@dimen/dimen_size_15" />

    </LinearLayout>


</LinearLayout>
