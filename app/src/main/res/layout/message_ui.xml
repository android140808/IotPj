    <include layout="@layout/comm_tittle"/>

    <RelativeLayout
        android:id="@+id/message_rl_security"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_size_20"
        android:background="@drawable/login_bg">

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="@dimen/dimen_size_40"
            android:layout_height="@dimen/dimen_size_40"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dimen_size_20"
            android:layout_marginTop="@dimen/dimen_size_20"
            android:layout_marginBottom="@dimen/dimen_size_20"
            android:background="@mipmap/message_security" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dimen_size_10"
            android:layout_toRightOf="@id/iv1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:text="@string/message_security"
                android:textColor="@color/color_black"
                android:textSize="@dimen/dimen_size_20" />

            <TextView
                android:id="@+id/security_destination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_size_5"
                android:gravity="center|start"
                android:singleLine="true"
                android:text="@string/message_security"
                android:textColor="@color/main_tv_un_select"
                android:textSize="@dimen/dimen_size_15" />
        </LinearLayout>

        <!-- <TextView
             android:layout_width="@dimen/dimen_size_30"
             android:layout_height="@dimen/dimen_size_30"
