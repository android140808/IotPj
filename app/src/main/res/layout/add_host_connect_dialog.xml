<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_200"
        android:background="@drawable/login_bg"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="@dimen/dimen_size_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/add_host_connect_dialog" />

        <TextView
            android:id="@+id/tittle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_50"
            android:gravity="center"
            android:text="正在连接设备......"
            android:textColor="@color/color_black"
            android:textSize="@dimen/dimen_size_15" />

    </LinearLayout>


</LinearLayout>
