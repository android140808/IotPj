<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dimen_size_50"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="@dimen/dimen_size_30"
        android:layout_height="@dimen/dimen_size_30"
        android:background="@mipmap/room_1_3_8_11" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_size_10"
        android:text="@string/room_living_room"
        android:textColor="@color/color_black"
        android:textSize="@dimen/dimen_size_15" />


</LinearLayout>
