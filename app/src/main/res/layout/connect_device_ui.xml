<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical"
    tools:context=".ui.activity.control.ConnectDeviceUI">

    <include layout="@layout/comm_tittle" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dimen_size_20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_size_20"
            android:gravity="center"
            android:orientation="vertical">

            <cn.zhian.avater.iotproject.widget.ConnectProgress
                android:id="@+id/connect_state_view"
                android:layout_width="@dimen/dimen_size_200"
                android:layout_height="match_parent"
                android:layout_centerInParent="true" />

            <cn.zhian.avater.iotproject.widget.ConnectViewGroup
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_size_50"
                android:layout_marginTop="@dimen/dimen_size_50">

                <ImageView
                    android:id="@+id/state_into_host"
                    android:layout_width="@dimen/dimen_size_15"
                    android:layout_height="@dimen/dimen_size_15"
                    android:background="@drawable/connect_dot_blue1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_size_15"
                    android:gravity="center"
                    android:text="主机进入关联模式" />


            </cn.zhian.avater.iotproject.widget.ConnectViewGroup>

            <cn.zhian.avater.iotproject.widget.ConnectViewGroup
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_size_50">

                <ImageView
                    android:id="@+id/state_into_device"
                    android:layout_width="@dimen/dimen_size_15"
                    android:layout_height="@dimen/dimen_size_15"
                    android:background="@drawable/connect_dot_blue1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_size_15"
                    android:gravity="center"
                    android:text="设备进入关联模式" />


            </cn.zhian.avater.iotproject.widget.ConnectViewGroup>

            <cn.zhian.avater.iotproject.widget.ConnectViewGroup
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_size_50">

                <ImageView
                    android:id="@+id/state_into_result"
                    android:layout_width="@dimen/dimen_size_15"
                    android:layout_height="@dimen/dimen_size_15"
                    android:background="@drawable/connect_dot_blue1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_size_15"
                    android:gravity="center"
                    android:text="正在关联" />


            </cn.zhian.avater.iotproject.widget.ConnectViewGroup>


        </LinearLayout>


    </RelativeLayout>


</LinearLayout>
