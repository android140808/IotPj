<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tittle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_size_20"
            android:gravity="center"
            android:textColor="@color/color_black"
            android:textSize="@dimen/dimen_size_15"
            tools:text="自定义标题" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_size_10"
            android:orientation="horizontal">

            <cn.zhian.avater.iotproject.ui.view.WheelView
                android:id="@+id/wheel_view_left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:itemNumber="5"
                app:lineColor="#33000000"
                app:maskHeight="22dp"
                app:noEmpty="true"
                app:normalTextColor="#CDCDCD"
                app:normalTextSize="14sp"
                app:selectedTextColor="#0090FF"
                app:selectedTextSize="14sp"
                app:unitHeight="28dp" />

            <cn.zhian.avater.iotproject.ui.view.WheelView
                android:id="@+id/wheel_view_middle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:itemNumber="5"
                app:lineColor="#33000000"
                app:maskHeight="22dp"
                app:noEmpty="true"
                app:normalTextColor="#CDCDCD"
                app:normalTextSize="14sp"
                app:selectedTextColor="#0090FF"
                app:selectedTextSize="14sp"
                app:unitHeight="28dp" />

            <cn.zhian.avater.iotproject.ui.view.WheelView
                android:id="@+id/wheel_view_right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:itemNumber="5"
                app:lineColor="#33000000"
                app:maskHeight="22dp"
                app:noEmpty="true"
                app:normalTextColor="#CDCDCD"
                app:normalTextSize="14sp"
                app:selectedTextColor="#0090FF"
                app:selectedTextSize="14sp"
                app:unitHeight="28dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_1"
            android:background="@color/color_black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_50"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/color_black"
                android:textSize="@dimen/dimen_size_15" />

            <TextView
                android:id="@+id/ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/home_icon_bg"
                android:textSize="@dimen/dimen_size_15" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
