<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/message_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_size_20"
        android:background="@drawable/login_bg">

        <ImageView
            android:id="@+id/message_state_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:background="@drawable/red_dot_shape" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_size_8"
            android:layout_marginTop="@dimen/dimen_size_10"
            android:layout_marginBottom="@dimen/dimen_size_10"
            android:layout_toRightOf="@id/message_state_iv"
            android:orientation="vertical">

            <TextView
                android:id="@+id/message_tittle_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标题"
                android:textColor="@color/color_black"
                android:textSize="@dimen/dimen_size_15"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/message_detail_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/message_tittle"
                android:layout_marginTop="@dimen/dimen_size_10"
                android:text="详情内容"
                android:textSize="@dimen/dimen_size_15" />
        </LinearLayout>

        <TextView
            android:id="@+id/message_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dimen_size_10"
            android:text="日期：yyyy.MM.dd"
            android:textSize="@dimen/dimen_size_15" />
    </RelativeLayout>

</LinearLayout>
