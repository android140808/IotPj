<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/sense_mode_bg"
    android:orientation="vertical"
    tools:context=".ui.activity.control.SenseModeUI">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_50"
        android:layout_alignParentTop="true">

        <!--左边返回键-->
        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/dimen_size_30"
            android:layout_height="@dimen/dimen_size_30"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dimen_size_20"
            android:background="@mipmap/back_while"
            android:visibility="visible" />

        <!--中间标题-->
        <TextView
            android:id="@+id/tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="情景模式面板"
            android:textColor="@color/color_while"
            android:textSize="@dimen/dimen_size_20" />


        <!--右边图标-->
        <ImageView
            android:id="@+id/edit"
            android:layout_width="@dimen/dimen_size_25"
            android:layout_height="@dimen/dimen_size_25"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dimen_size_20"
            android:layout_marginRight="@dimen/dimen_size_20"
            android:background="@mipmap/edit"
            android:visibility="visible" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/dimen_size_110"
                android:layout_height="@dimen/dimen_size_110"
                android:layout_marginRight="@dimen/dimen_size_10"
                android:background="@drawable/home_recyler_view_item_bg"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dimen_size_40"
                    android:layout_height="@dimen/dimen_size_40"
                    android:background="@mipmap/add_home_often" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_size_10"
                    android:text="自定义"
                    android:textColor="@color/main_tv_un_select"
                    android:textSize="@dimen/dimen_size_15" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dimen_size_110"
                android:layout_height="@dimen/dimen_size_110"
                android:layout_marginLeft="@dimen/dimen_size_10"
                android:background="@drawable/home_recyler_view_item_bg"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dimen_size_40"
                    android:layout_height="@dimen/dimen_size_40"
                    android:background="@mipmap/room_2_19_keting" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_size_10"
                    android:text="回家模式"
                    android:textColor="@color/main_tv_un_select"
                    android:textSize="@dimen/dimen_size_15" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_size_20"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/dimen_size_110"
                android:layout_height="@dimen/dimen_size_110"
                android:layout_marginRight="@dimen/dimen_size_10"
                android:background="@drawable/home_recyler_view_item_bg"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dimen_size_40"
                    android:layout_height="@dimen/dimen_size_40"
                    android:background="@mipmap/item_leave_home" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_size_10"
                    android:text="离家模式"
                    android:textColor="@color/main_tv_un_select"
                    android:textSize="@dimen/dimen_size_15" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dimen_size_110"
                android:layout_height="@dimen/dimen_size_110"
                android:layout_marginLeft="@dimen/dimen_size_10"
                android:background="@drawable/home_recyler_view_item_bg"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dimen_size_40"
                    android:layout_height="@dimen/dimen_size_40"
                    android:background="@mipmap/item_sleep" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_size_10"
                    android:text="睡眠模式"
                    android:textColor="@color/main_tv_un_select"
                    android:textSize="@dimen/dimen_size_15" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
