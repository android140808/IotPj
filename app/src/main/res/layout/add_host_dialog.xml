<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_200"
        android:background="@drawable/login_bg"
        android:gravity="center|bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tittle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_80"
            android:gravity="center"
            android:text="请输入设备编号"
            android:textColor="@color/color_black"
            android:textSize="@dimen/dimen_size_15" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_70"
            android:layout_marginLeft="@dimen/dimen_size_20"
            android:layout_marginRight="@dimen/dimen_size_20"
            android:background="#F8F8F8">

            <EditText
                android:id="@+id/input_content"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_size_60"
                android:background="@null"
                android:hint="设备编号"
                android:padding="@dimen/dimen_size_10" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dimen_size_10"
            android:background="@color/main_tv_un_select" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_size_50"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/color_black"
                android:textSize="@dimen/dimen_size_15" />

            <TextView
                android:id="@+id/ok"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_size_50"
                android:layout_weight="1"
                android:gravity="center"
                android:text="添加"
                android:textColor="@color/home_icon_bg"
                android:textSize="@dimen/dimen_size_15" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>
