<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tittle_content"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_size_50"
    android:background="@color/color_while">

    <!--左边返回键-->
    <ImageView
        android:id="@+id/comm_tittle_iv_left"
        android:layout_width="@dimen/dimen_size_30"
        android:layout_height="@dimen/dimen_size_30"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dimen_size_20"
        android:background="@mipmap/back"
        android:visibility="gone" />

    <!--中间标题-->
    <TextView
        android:id="@+id/comm_tittle_tv_middle_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/color_black"
        android:textSize="@dimen/dimen_size_20"
        tools:text="@string/main_tv_setting" />


    <!--右边图标-->
    <ImageView
        android:id="@+id/comm_tittle_iv_right_img"
        android:layout_width="@dimen/dimen_size_25"
        android:layout_height="@dimen/dimen_size_25"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dimen_size_20"
        android:layout_marginRight="@dimen/dimen_size_20"
        android:visibility="gone" />

    <!--右边文字-->
    <TextView
        android:id="@+id/comm_tittle_tv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/dimen_size_20"
        android:textColor="@color/home_icon_bg"
        android:textSize="@dimen/dimen_size_18"
        android:visibility="gone"
        tools:text="保存" />

</RelativeLayout>
