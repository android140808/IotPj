<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    tools:context=".ui.activity.LoginUI">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_size_20"
        android:text="@string/login"
        android:textColor="@color/color_black"
        android:textSize="@dimen/dimen_size_25"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dimen_size_20"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_50"
            android:layout_marginLeft="@dimen/dimen_size_20"
            android:layout_marginRight="@dimen/dimen_size_20"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_size_1"
                android:layout_weight="1"
                android:background="@color/main_tv_un_select" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_size_20"
                android:layout_marginRight="@dimen/dimen_size_20"
                android:text="@string/login_thirty" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_size_1"
                android:layout_weight="1"
                android:background="@color/main_tv_un_select" />

        </LinearLayout>

        <ImageView
            android:id="@+id/login_iv_wechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/login_wechat" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/dimen_size_20"
        android:background="@drawable/login_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_50"
            android:layout_marginLeft="@dimen/dimen_size_10"
            android:layout_marginTop="@dimen/dimen_size_20"
            android:layout_marginRight="@dimen/dimen_size_10"
            android:gravity="center|start"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dimen_size_30"
                android:layout_height="@dimen/dimen_size_30"
                android:background="@mipmap/login_phone" />

            <EditText
                android:id="@+id/login_et_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_size_50"
                android:layout_marginLeft="@dimen/dimen_size_20"
                android:background="@null"
                android:hint="@string/login_input_phone"
                android:inputType="number"
                android:singleLine="true"
                android:text="18378407970"
                android:textSize="@dimen/dimen_size_15" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_1"
            android:layout_margin="@dimen/dimen_size_10"
            android:layout_marginTop="@dimen/dimen_size_5"
            android:background="@color/color_bg" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_50">

            <EditText
                android:id="@+id/login_et_code"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_size_50"
                android:layout_marginLeft="@dimen/dimen_size_20"
                android:background="@null"
                android:hint="@string/login_set_phone_check"
                android:inputType="number"
                android:singleLine="true"
                android:text="1234"
                android:textSize="@dimen/dimen_size_15" />

            <TextView
                android:id="@+id/login_tv_get"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/dimen_size_10"
                android:layout_marginTop="@dimen/dimen_size_15"
                android:layout_marginRight="@dimen/dimen_size_10"
                android:gravity="end"
                android:text="@string/login_get_phone_check"
                android:textColor="@color/home_icon_bg"
                android:textSize="@dimen/dimen_size_15" />

        </RelativeLayout>

        <Button
            android:id="@+id/login_btn_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_50"
            android:layout_marginLeft="@dimen/dimen_size_10"
            android:layout_marginTop="@dimen/dimen_size_20"
            android:layout_marginRight="@dimen/dimen_size_10"
            android:background="@drawable/btn_selector"
            android:text="@string/login"
            android:textColor="@color/color_while"
            android:textSize="@dimen/dimen_size_20" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_50"
            android:layout_marginLeft="@dimen/dimen_size_10"
            android:layout_marginTop="@dimen/dimen_size_20"
            android:layout_marginRight="@dimen/dimen_size_10"
            android:layout_marginBottom="@dimen/dimen_size_20"
            android:gravity="center|start"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/login_cb_agree"
                android:layout_width="@dimen/dimen_size_30"
                android:layout_height="@dimen/dimen_size_30" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_size_8"
                android:text="@string/login_agree"
                android:textSize="@dimen/dimen_size_13" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
