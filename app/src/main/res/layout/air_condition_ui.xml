<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/tv_control_bg"
    android:orientation="vertical"
    tools:context=".ui.activity.control.TVControlUI">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_40"
        android:layout_alignParentTop="true">

        <!--左边返回键-->
        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/dimen_size_30"
            android:layout_height="@dimen/dimen_size_30"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dimen_size_20"
            android:background="@mipmap/back_while"
            android:visibility="visible" />

        <!--中间标题-->
        <TextView
            android:id="@+id/tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="空调遥控器"
            android:textColor="@color/color_while"
            android:textSize="@dimen/dimen_size_20" />


        <!--右边图标-->
        <ImageView
            android:id="@+id/edit"
            android:layout_width="@dimen/dimen_size_25"
            android:layout_height="@dimen/dimen_size_25"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dimen_size_20"
            android:layout_marginRight="@dimen/dimen_size_20"
            android:background="@mipmap/setting_white"
            android:visibility="visible" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dimen_size_20"
        android:layout_marginTop="@dimen/dimen_size_10"
        android:layout_marginRight="@dimen/dimen_size_20"
        android:background="@drawable/tv_control_shape">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_size_20"
                android:background="@drawable/air_c_bg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_size_10"
                    android:gravity="center"
                    android:text="当前温度"
                    android:textSize="@dimen/dimen_size_20" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="25*C"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/dimen_size_30" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_size_50"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="制冷模式：" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开启" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_size_20"
                        android:text="风速：" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="微风" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_size_20"
                        android:text="定时：" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开启" />


                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_size_60"
                android:layout_marginTop="@dimen/dimen_size_20"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/air_menu"
                    android:layout_width="@dimen/dimen_size_30"
                    android:layout_height="@dimen/dimen_size_30"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/dimen_size_40"
                    android:background="@mipmap/tv_menu" />

                <ImageView
                    android:id="@+id/air_power_on_off"
                    android:layout_width="@dimen/dimen_size_60"
                    android:layout_height="@dimen/dimen_size_60"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/tv_on_off" />

                <ImageView
                    android:id="@+id/air_raise_wind"
                    android:layout_width="@dimen/dimen_size_30"
                    android:layout_height="@dimen/dimen_size_30"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/dimen_size_40"
                    android:background="@mipmap/air_raise_wind" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_size_200"
                android:layout_marginTop="@dimen/dimen_size_20"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dimen_size_10"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/air_mode_hot"
                        android:layout_width="@dimen/dimen_size_30"
                        android:layout_height="@dimen/dimen_size_30"
                        android:layout_marginBottom="@dimen/dimen_size_20"
                        android:background="@mipmap/air_mode_hot" />

                    <ImageView
                        android:id="@+id/air_mode_cold"
                        android:layout_width="@dimen/dimen_size_30"
                        android:layout_height="@dimen/dimen_size_30"
                        android:layout_marginTop="@dimen/dimen_size_20"
                        android:background="@mipmap/air_mode_cold" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="@dimen/dimen_size_60"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimen_size_40"
                    android:layout_marginRight="@dimen/dimen_size_40"
                    android:background="@drawable/tv_sound_bg"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/air_sound_add"
                        android:layout_width="@dimen/dimen_size_30"
                        android:layout_height="@dimen/dimen_size_30"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="@dimen/dimen_size_10"
                        android:background="@mipmap/tv_add" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:singleLine="true"
                        android:text="温度"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/dimen_size_15" />

                    <ImageView
                        android:id="@+id/air_sound_down"
                        android:layout_width="@dimen/dimen_size_30"
                        android:layout_height="@dimen/dimen_size_30"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="@dimen/dimen_size_10"
                        android:background="@mipmap/tv_cut" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dimen_size_10"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/air_wind_direct"
                        android:layout_width="@dimen/dimen_size_30"
                        android:layout_height="@dimen/dimen_size_30"
                        android:layout_marginBottom="@dimen/dimen_size_20"
                        android:background="@mipmap/air_wind_direct" />

                    <ImageView
                        android:id="@+id/air_wind_speed"
                        android:layout_width="@dimen/dimen_size_30"
                        android:layout_height="@dimen/dimen_size_30"
                        android:layout_marginTop="@dimen/dimen_size_20"
                        android:background="@mipmap/air_wind_speed" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_size_50"
                android:layout_marginTop="@dimen/dimen_size_20"
                android:gravity="center">

                <ImageView
                    android:id="@+id/air_sound_on_off"
                    android:layout_width="@dimen/dimen_size_30"
                    android:layout_height="@dimen/dimen_size_30"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/sound_off" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>
