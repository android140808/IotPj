<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/ll_view"
        android:layout_width="@dimen/dimen_size_120"
        android:layout_height="@dimen/dimen_size_120"
        android:layout_margin="@dimen/dimen_size_10"
        android:background="@color/color_while"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/dimen_size_50"
            android:layout_height="@dimen/dimen_size_50" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_size_5"
            android:gravity="center"
            android:singleLine="true"
            android:text="智能家居"
            android:textColor="@color/color_black"
            android:textSize="@dimen/dimen_size_12" />
    </LinearLayout>


</LinearLayout>
