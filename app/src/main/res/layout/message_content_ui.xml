<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_50"
        android:background="@color/color_while">

        <!--左边返回键-->
        <ImageView
            android:id="@+id/comm_tittle_iv_left"
            android:layout_width="@dimen/dimen_size_30"
            android:layout_height="@dimen/dimen_size_30"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dimen_size_20"
            android:background="@mipmap/back" />

        <!--中间标题-->
        <TextView
            android:id="@+id/comm_tittle_tv_middle_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/message_content_tittle"
            android:textColor="@color/color_black"
            android:textSize="@dimen/dimen_size_20" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_50"
        android:background="@color/color_while"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_security"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_security"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/message_security"
                android:textColor="@color/home_icon_bg"
                android:textSize="@dimen/dimen_size_18" />

            <View
                android:id="@+id/view_security"
                android:layout_width="@dimen/dimen_size_50"
                android:layout_height="@dimen/dimen_size_2"
                android:layout_marginTop="@dimen/dimen_size_10"
                android:background="@color/home_icon_bg" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_environment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_environment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/message_environment"
                android:textColor="@color/color_black"
                android:textSize="@dimen/dimen_size_18" />

            <View
                android:id="@+id/view_environment"
                android:layout_width="@dimen/dimen_size_50"
                android:layout_height="@dimen/dimen_size_2"
                android:layout_marginTop="@dimen/dimen_size_10"
                android:background="@color/color_while" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_pull"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_pull"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/message_pull"
                android:textColor="@color/color_black"
                android:textSize="@dimen/dimen_size_18" />

            <View
                android:id="@+id/view_pull"
                android:layout_width="@dimen/dimen_size_50"
                android:layout_height="@dimen/dimen_size_2"
                android:layout_marginTop="@dimen/dimen_size_10"
                android:background="@color/color_while" />
        </LinearLayout>

    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
