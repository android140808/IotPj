<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_bg"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/reset_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_size_20"
            android:gravity="center"
            android:text="@string/reset_tittle"
            android:textColor="@color/color_black"
            android:textSize="@dimen/dimen_size_15" />

        <LinearLayout
            android:id="@+id/reset_ll_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_70"
            android:layout_margin="@dimen/dimen_size_20"
            android:background="@color/color_bg"
            android:gravity="center"
            android:visibility="gone">

            <EditText
                android:id="@+id/reset_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_size_50"
                android:layout_marginLeft="@dimen/dimen_size_20"
                android:layout_marginRight="@dimen/dimen_size_20"
                android:background="@null"
                android:inputType="textPassword"
                android:singleLine="true" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/login_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_50"
            android:layout_marginTop="@dimen/dimen_size_8"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reset_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/reset_cancel"
                android:textSize="@dimen/dimen_size_15" />

            <TextView
                android:id="@+id/reset_ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/reset_ok"
                android:textColor="@color/home_icon_bg"
                android:textSize="@dimen/dimen_size_15" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
